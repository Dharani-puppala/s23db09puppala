extends layout

block content
  h1= title
  p rowcount: #{query.rows} , colcount: #{query.cols}
  - let rows  = Number(query.rows)
  - let col = Number(query.cols)
  - if (!Number.isInteger(rows) || !Number.isInteger(col))
    P values are supposed to be integers
  - else if(rows < 1 || rows > 10)
    p rows are in the range of 1 to 10
  - else if(col < 1 || col > 10)
    p cols are in the range of 1 to 10
  - else
    table#outer
      - for(let i = 0; i < rows; i++)
        tr#middle
          - for(let j = 0; j < col; j++)
            - let dCell = 0;
              - if (i === j)
                - dCell = 1;
              - else if (i === j + 1)
                - dCell = 2;
              - else if (i === j - 1)
                - dCell = i;
              td= dCell